<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@drawable/list_background_drawable"
    android:layout_marginLeft="@dimen/BreakdownListLandscapeMargin">

        <com.BogdanMihaiciuc.util.TagView
            android:id="@+id/ItemTags"
            android:layout_height="54dp"
            android:layout_width="54dp"
            android:layout_marginLeft="@dimen/BreakdownListPadding" />
	        
	    <TextView
	        android:id="@+id/ItemTitle"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:textColor="@color/DashboardText"
            android:textIsSelectable="false"
            android:maxLines="2"
            android:layout_marginLeft="@dimen/BreakdownNamePadding"
            android:ellipsize="end"
            android:visibility="gone"/>
	
	    <TextView
	        android:id="@+id/PriceTitle"
            android:layout_height="54dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="left"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/DashboardText"
	        android:textIsSelectable="false"
	        android:ellipsize="end"
        	android:maxLines="1"
	        android:paddingRight="8dp"
        	android:paddingLeft="8dp"
            android:layout_marginLeft="@dimen/BreakdownNamePadding"/>

</FrameLayout>