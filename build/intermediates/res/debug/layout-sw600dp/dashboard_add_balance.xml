<?xml version="1.0" encoding="utf-8"?>
<com.BogdanMihaiciuc.util.DisableableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DashboardAddBalance"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:clipChildren="false">


    <ImageView
        android:layout_width="@dimen/ActionBarButtonWidth"
        android:layout_height="@dimen/ActionBarSize"
        android:id="@android:id/home"
        android:layout_gravity="left"
        android:src="@drawable/ic_action_done_dark"
        android:scaleType="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/PrimaryKeyline"
        android:id="@+id/DashboardEditorTitle"
        android:textSize="@dimen/HeaderTextSize"
        android:textColor="@color/DashboardText"
        android:gravity="center"
        android:text="@string/Balance"/>

    <LinearLayout
        android:id="@+id/SearchBoxLayout"
        android:layout_height="match_parent"
        android:layout_width="240dp"
        android:background="@drawable/add_balance_textbox_states"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="@dimen/PrimaryKeyline"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:addStatesFromChildren="true"
        android:layout_gravity="right"
        android:paddingLeft="8dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp" >

        <EditText
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/null_drawable"
            android:hint="@string/AddBalanceHint"
            android:id="@+id/AddBox"
            android:imeOptions="actionSearch|flagNoExtractUi"
            android:textIsSelectable="false"
            android:inputType="textAutoComplete"/>

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/separator_gray"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="@dimen/ActionBarButtonWidth"
            android:layout_height="match_parent"
            android:src="@drawable/content_new_mini_dark"
            android:id="@+id/AddToBalance"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/ActionBarButtonWidth"
        android:layout_height="@dimen/ActionBarSize"
        android:id="@+id/MenuEditDashboard"
        android:layout_gravity="right"
        android:src="@drawable/ic_wallet_dark"
        android:scaleType="center"/>

</com.BogdanMihaiciuc.util.DisableableFrameLayout><!-- From: file:/Users/Bogdan/Dropbox/Receipt%20Application/Receipt/res/layout-sw600dp/dashboard_add_balance.xml -->