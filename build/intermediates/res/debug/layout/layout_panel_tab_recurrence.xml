<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RecurrenceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/PricingView"
                android:layout_alignParentTop="true"
                android:visibility="invisible" >

    <TextView
        android:id="@+id/RecurrenceTitle"
        android:layout_height="@dimen/TotalFragmentHeight"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/RecurrenceTitle"
        android:textSize="24sp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/light_text_gray"
        android:paddingLeft="14dp"
        style="?android:attr/borderlessButtonStyle"
        android:enabled="false"/>

    <ListView
        android:id="@+id/RecurrenceList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/RecurrenceTitle"
        android:layout_alignParentBottom="true"/>

