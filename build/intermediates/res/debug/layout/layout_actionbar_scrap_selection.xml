<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ReceiptActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:clickable="true"
    android:orientation="horizontal"
    android:background="@color/HeaderCanCheckout" >
    
    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

	    <TextView
	        android:id="@+id/ActionModeDone"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        style="?android:attr/borderlessButtonStyle"
	        android:drawableLeft="@drawable/ic_action_done"
	        android:fontFamily="sans-serif"
	        android:paddingRight="16dp"
	        android:paddingLeft="16dp"
	        android:text="@string/ActionModeDone"
	        android:textColor="@android:color/white"
	        android:textSize="12sp"
	        android:textAllCaps="true" >
	    </TextView>
	    
	    <View
	        android:layout_height="24dp"
	        android:layout_width="1dp"
	        android:layout_gravity="center"
	        android:background="#33000000" />

	    <TextView
	        android:id="@+id/ActionModeTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:fontFamily="sans-serif"
	        android:paddingRight="16dp"
	        android:paddingLeft="16dp"
	        android:textColor="@android:color/white"
	        android:textSize="18sp" >
	    </TextView>
	    
	    <View
	        android:layout_height="1dp"
	        android:layout_width="0dp"
	        android:layout_weight="1" />
	
	    <TextView
	        android:id="@+id/AddToList"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_gravity="center"
	        android:minWidth="52dp"
	        style="?android:attr/borderlessButtonStyle"
	        android:drawableLeft="@drawable/ic_action_copy"
	        android:fontFamily="sans-serif"
	        android:paddingRight="8dp"
	        android:paddingLeft="8dp"
	        android:text="@string/AddToList"
	        android:textColor="@android:color/white"
	        android:textAllCaps="true"
	        android:textStyle="bold"
	        android:textSize="12sp" />
    
    </LinearLayout>
                
    <View android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
	    android:background="#33000000"
        />

</FrameLayout><!-- From: file:/Users/Bogdan/Dropbox/Receipt%20Application/Receipt/res/layout/layout_actionbar_scrap_selection.xml -->