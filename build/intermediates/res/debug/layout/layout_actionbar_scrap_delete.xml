<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ReceiptActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:clickable="true"
    android:orientation="horizontal"
    android:background="@android:color/holo_orange_light" >
    
    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

	    <TextView
	        android:id="@+id/ConfirmBack"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        style="?android:attr/borderlessButtonStyle"
	        android:drawableLeft="@drawable/caret_up"
	        android:fontFamily="sans-serif"
	        android:paddingRight="16dp"
	        android:paddingLeft="4dp"
	        android:text="@string/ConfirmScrapTitle"
	        android:textColor="@color/YellowBannerBlackText"
	        android:textSize="18sp" >
	    </TextView>
	    
	    <View
	        android:layout_height="1dp"
	        android:layout_width="0dp"
	        android:layout_weight="1" />
	
	    <TextView
	        android:id="@+id/ConfirmCancel"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        style="?android:attr/borderlessButtonStyle"
	        android:fontFamily="sans-serif"
	        android:paddingRight="16dp"
	        android:paddingLeft="16dp"
	        android:text="@string/CancelButtonLabel"
	        android:textColor="@color/YellowBannerBlackText"
	        android:textAllCaps="true"
	        android:textStyle="bold"
	        android:textSize="12sp" />
	    
	    <View
	        android:layout_height="24dp"
	        android:layout_width="1dp"
	        android:layout_gravity="center"
	        android:background="#33000000" />
	
	    <TextView
	        android:id="@+id/ConfirmOK"
	        android:layout_width="64dp"
	        android:layout_height="match_parent"
	        style="?android:attr/borderlessButtonStyle"
	        android:fontFamily="sans-serif"
	        android:paddingRight="8dp"
	        android:paddingLeft="8dp"
	        android:text="@string/OKButtonLabel"
	        android:textColor="@color/YellowBannerBlackText"
	        android:textAllCaps="true"
	        android:textStyle="bold"
	        android:textSize="12sp" />
    
    </LinearLayout>
                
    <View android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
	    android:background="#33000000"
        />

</FrameLayout><!-- From: file:/Users/Bogdan/Dropbox/Receipt%20Application/Receipt/res/layout/layout_actionbar_scrap_delete.xml -->